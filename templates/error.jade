extends layout

block content
  nav.page-header-nav
    a(type="button", class="btn btn-default btn-lg page-header-link", href="/")
      span(class="glyphicon glyphicon-home", aria-hidden="true")
  .container
    .row
      h1= page.metadata.message
      h2= page.metadata.statusCode
      if page.metadata.description
        p= page.metadata.description
      if page.metadata.showGoToHome
        p Please try going to the home page and try again. If the problem persists,
          a(href="https://github.com/sieveable/sieveable.io/issues") let us know
